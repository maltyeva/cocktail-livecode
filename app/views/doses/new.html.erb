<h1 class="text-center">Add a Dose</h1>
<div class="row">
  <div class="col-8 offset-2">
    <!-- post cocktails/34/doses -->
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient, collection: @ingredients %>
      <%#= f.association :cocktail, as: :hidden, value: @cocktail.id %>
      <%= f.submit %>
    <% end %>
  </div>
</div>